{
  "name": "animflow",
  "version": "1.0.0",
  "description": "A lightweight, high-performance animation library for creating smooth, responsive web animations",
  "main": "dist/animflow.min.js",
  "style": "dist/animflow.min.css",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.{js,ts,css}",
    "prepare": "npm run build",
    "publish:npm": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/animflow/animflow.git"
  },
  "keywords": [
    "animation",
    "scroll",
    "intersection-observer",
    "performance",
    "lightweight",
    "css",
    "javascript",
    "web-animation",
    "svg-animation",
    "responsive"
  ],
  "author": "AnimFlowOrg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/animflow/animflow/issues"
  },
  "homepage": "https://github.com/animflow/animflow#readme",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rollup": "^4.12.0",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}